{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "printWidth": 80,
                "tabWidth": 2,
                "useTabs": true,
                "semi": false,
                "trailingComma": "es5",
                "space-before-function-paren": [
                    "error",
                    "always"
                ]
            }
        ]
    }
}